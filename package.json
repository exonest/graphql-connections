{
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/exonest",
  "repository": {
    "type": "git",
    "url": "https://github.com/exonest/graphql-connections"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@exonest/graphql-connections",
  "author": "Alireza Zamani",
  "module": "dist/graphql-connections.esm.js",
  "size-limit": [
    {
      "path": "dist/graphql-connections.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/graphql-connections.esm.js",
      "limit": "10 KB"
    }
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.4",
    "husky": "^7.0.4",
    "np": "^7.5.0",
    "size-limit": "^6.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.1",
    "@nestjs/graphql": "^9.1.1",
    "apollo-server-core": "^3.5.0",
    "graphql": "15.7.0",
    "reflect-metadata": "^0.1.13"
  }
}
